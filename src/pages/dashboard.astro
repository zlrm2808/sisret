---
import Layout from '@/layouts/Layout.astro';
import { Search, ListFilter, ChevronLeft, ChevronRight } from '@lucide/astro';

const session = Astro.cookies.get('session');

if (!session) {
  return Astro.redirect('/login');
}
---

<Layout title="Dashboard">
  <div class="max-w-7xl mx-auto h-full flex flex-col">
    <div id="dashboard-card" class="bg-white rounded-xl shadow-lg p-8 mb-8 flex-1 flex flex-col">
      <div id="search-filter-controls" class="flex flex-col md:flex-row items-center justify-between mb-6 gap-4">
        <div class="relative flex-grow w-full md:w-auto">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <Search class="h-5 w-5 text-gray-400" />
          </div>
          <input
            type="text"
            id="search-input"
            placeholder="Buscar retención por RIF, Nro. Factura, etc."
            class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:text-sm transition duration-150 ease-in-out"
          />
        </div>
        <div class="flex flex-wrap gap-3">
          <button
            id="filter-all"
            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out"
          >
            <ListFilter class="h-4 w-4 mr-2" /> Todas
          </button>
          <button
            id="filter-islr"
            class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out"
          >
            ISLR
          </button>
          <button
            id="filter-iva"
            class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out"
          >
            IVA
          </button>
        </div>
      </div>

      <div id="table-scroll-container" class="overflow-x-auto rounded-lg shadow-sm border border-gray-200 flex-1 flex flex-col">
        <table class="min-w-full divide-y divide-gray-200">
          <thead id="table-header" class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer" data-sort="type">Tipo</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer" data-sort="rif">RIF</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer" data-sort="nro_factura">Nro. Factura</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer" data-sort="nro_comprobante">Nro. Comprobante</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer" data-sort="fecha_documento">Fecha Documento</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer" data-sort="base_imponible">Base Imponible</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer" data-sort="monto_retenido">Monto Retenido</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
            </tr>
          </thead>
          <tbody id="retenciones-table-body" class="bg-white divide-y divide-gray-200">
            <!-- Data will be rendered here by JavaScript -->
          </tbody>
        </table>
      </div>

      <div id="pagination-controls" class="flex justify-between items-center mt-4">
        <button id="prev-page" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out">
          <ChevronLeft class="w-5 h-5 inline-block mr-2" /> Anterior
        </button>
        <span id="page-info" class="text-sm text-gray-700">Página 1 de 1</span>
        <button id="next-page" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out">
          Siguiente <ChevronRight class="w-5 h-5 inline-block ml-2" />
        </button>
      </div>
    </div>
  </div>
</Layout>

<script src="../scripts/dashboard.ts"></script>